<% include ../layout/header.ejs %>
<!-- Header End -->

<div id="maincontainer">
	<section id="product">
		<div class="container">
		 <!--  breadcrumb -->
			<h1 class="heading1">
				<span class="maintext" style="float: left;width: 100%;text-align: center;margin-top: 20px"> Shopping Cart</span>
				<span class="subtext" style="float: left;width: 100%;text-align: center;margin-bottom: 20px;margin-top: 5px;font-size: 14px"> All items in your  Shopping Cart</span>
			</h1>
			<!-- Cart-->
			<% if(success_msg != ''){ %>
            	<div class="alert alert-success"><%= success_msg%></div>
            <% } %>
			<div class="cart-info">
				<table class="table table-striped table-bordered table-order">
					<tr style="border-bottom: 1px solid #ddd">
						<th class="image">Image</th>
						<th class="name" style="text-align: left">Product Name</th>
						<th class="quantity" style="text-align: center;width: 76px">Total</th>
						<th class="price" style="text-align: center">Price</th>
						<th class="total" style="text-align: center">Total money</th>
						<th></th>

					</tr>
					<% var total = 0; if(data){ data.forEach(function(item){ total += item.tien %>
					<tr>
						<td class="image"><a href="#" style="width: 50px;height: 50px;display: inline-block;overflow: hidden;border-radius: 50%;"><img title="product" alt="product" src="upload/<%= item.item.img%>" style="object-fit: cover;"></a></td>
						<td  class="name" style="align-items: center;justify-self: center;text-align: left"><a href="/chi-tiet/<%= item.item.nameKhongDau%>.<%= item.item._id%>.<%= item.item.cateId%>.html"><%= item.item.name%></a></td>
           				<td class="quantity">
           					<div style="float: left;width: 20px;line-height: 28px;text-align: center;border: 1px solid #ccc;cursor: pointer;" class="updateCartRemove" value-id="<%= item.item._id%>">
           						-
           					</div>
           					<input id="<%= item.item._id%>" type="text" size="1" value="<%= item.soluong%>" name="quantity[40]" class="span1" style="margin: 0px;float: left;border-radius: 0px;border-left: 0px;text-align: center;width: 20px;border-right: 0px;">
           					<div style="float: left;width: 20px;line-height: 28px;text-align: center;border: 1px solid #ccc;cursor: pointer;" class="updateCartAdd" value-id="<%= item.item._id%>">
           						+
           					</div>
           				</td>

						<td class="price" style="text-align: center"><%= item.item.price%> SAR</td>
						<td class="total" style="text-align: center"><%= item.tien%> SAR</td>
						<td style="text-align: center">
							<a href="#" class="tooltip-test delCart" id="<%= item.item._id%>" data-original-title="Delete">
								<i class="fas fa-trash-alt"></i>
							</a>
						</td>

					</tr>
					<%})}%>

				</table>
			</div>
			<div class="container">
			<div class="pull-right">
					<div class="span4 pull-right">
						<table class="table table-striped table-bordered " style="border: 0px">
								<td style="border: 0px; padding: 0px;text-align: center;">
									<span class="extra bold totalamout" style="color: black">Total :</span>
									<span class="bold totalamout"><%= total%> SAR</span>
									<a href="/dat-hang.html" class="btn btn-orange pull-right">Submit</a>
								</td>
							</tr>
						</table>
					</div>
				</div>
				</div>
		</div>
	</section>
</div>

<!-- Footer -->
<% include ../layout/footer.ejs %>
